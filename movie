#!/usr/bin/env ruby

require 'optparse'

command = ARGV[0]
title = ARGV[1]
options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: movie [command] [options]"

  opts.on("-s [SEEN]", "Movie seen?") do |seen|
    options[:seen] = seen
  end
  opts.on("-o [OWN]", "Movie owned?") do |own|
    options[:own] = own
  end
  opts.on("-ws [WISHLIST_SEE]", "Wishlist see?") do |wishlist_see|
    options[:wishlist_see] = wishlist_see
  end
  opts.on("-wo [WISHLIST_OWN]", "Wishlist own?") do |wishlist_own|
    options[:wishlist_own] = wishlist_own
  end
  opts.on("-r [RATING]", "The Rating") do |rating|
    options[:rating] = rating
  end
end.parse!

if title.nil? or title.empty?
 puts "You must provide the movie title you are adding"
 exit
end

 missing_things = []
 missing_things << "seen?" unless options[:seen]
 missing_things << "own?" unless options[:own]
 missing_things << "wishlist see" unless options[:wishlist_see]
 missing_things << "wishlist own" unless options[:wishlist_own]
 missing_things << "user rating" unless options[:rating]
 unless missing_things.empty?
  puts "You must provide the #{missing_things.join(" and ")} of the movie you are adding"
  exit
 end

 puts "Theoretically creating: a movie named #{title} with seen? #{options[:seen]},
 own? #{options[:own]}, wishlist see #{options[:wishlist_see]}, wishlist own #{options[:wishlist_own]},
 rating #{options[:rating]}"